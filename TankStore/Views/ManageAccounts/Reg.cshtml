@model IEnumerable<TankStore.Models.Role>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>
@using (Html.BeginForm("Reg", "ManageAccounts", FormMethod.Post)) {
    <div>
        <label>
            Login: <input type="text" name="login" id="login" autocomplete="off"/>
        </label>
    </div>
    <div>
        <label>
            Password: <input type="password" name="password" id="password" autocomplete="off"/>
        </label>
    </div>
    <div>
        <label>
            Account type:
            <select name="role" value="-">
                @foreach (var el in Model) {
                <option>@el.Name</option>
                }
            </select>
        </label>
    </div>
    <div>
        <input type="submit" class="button" value="Create" />
    </div>
}
<div>
    <input id="btnBack" type="button" class="button" value="Back" />
</div>

@Scripts.Render("~/Scripts/MyScripts/RegView.js")
