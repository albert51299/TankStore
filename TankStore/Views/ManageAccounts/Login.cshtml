
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "ManageAccounts", FormMethod.Post)) {
    <div>
        <label>
            Login: <input type="text" name="login" id="login" autocomplete="off"/>
        </label>
    </div>
    <div>
        <label>
            Password: <input type="password" name="password" id="password" autocomplete="off"/>
        </label>
    </div>
    <div>
        <input type="submit" class="button" value="Login" />
    </div>
}
<div>
    <input id="btnBack" type="button" class="button" value="Back" />
</div>

@Scripts.Render("~/Scripts/MyScripts/LoginView.js")
